<script src="../../dist/js/bootstrap.min.js"></script>

<!-- Icons -->
<script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
<script>
  feather.replace()
</script>

<!-- Graphs -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
<script>
  var ctx = document.getElementById("myChart");
  var myChart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: ["6 hours ago", "5 hours ago", "4 hours ago", "3 hours ago", "2 hours ago", "1 hour ago", "Seconds ago"],
      datasets: [{
        label: "Humidity",
        data: [<%= user.data.humidity[0] %>, <%= user.data.humidity[1] %>, <%= user.data.humidity[2] %>, <%= user.data.humidity[3] %>, <%= user.data.humidity[4] %>, <%= user.data.humidity[5] %>, <%= user.data.humidity[6] %>],
        lineTension: 0,
        backgroundColor: 'transparent',
        borderColor: '#03ffc4',
        borderWidth: 4,
        pointBackgroundColor: '#03ffc4'
      }, {
        label: "Temperature",
        data: [<%= user.data.temp[0] %>, <%= user.data.temp[1] %>, <%= user.data.temp[2] %>, <%= user.data.temp[3] %>, <%= user.data.temp[4] %>, <%= user.data.temp[5] %>, <%= user.data.temp[6] %>],
        lineTension: 0,
        backgroundColor: 'transparent',
        borderColor: '#c879ff',
        borderWidth: 4,
        pointBackgroundColor: '#c879ff'
      }]
    },
    options: {
      scales: {
        yAxes: [{
          ticks: {
            beginAtZero: false
          }
        }]
      },
      legend: {
        display: true,
      }
    }
  });
</script>
</body>
</html>